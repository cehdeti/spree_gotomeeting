<%= f.field_container :webinar do %>
  <%= f.label :webinar, 'Is this a webinar?' %><br />
  <%= f.check_box :webinar %>
<% end %>

<%= f.field_container :webinar_key do %>
  <%= f.label :webinar_key, 'Webinar Key' %><br />
  <%= f.text_field :webinar_key, readonly: true %>
<% end %>

<%= f.field_container :webinar_date do %>
  <%= f.label :webinar_date, 'Date of webinar:' %><br />

  <div class="input-group date" id='webinarDatetimePicker'>
    <%= f.text_field :webinar_date, value: @product.webinar_date, class: 'form-control' %>
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-calendar"></span>
    </span>
  </div>
<% end %>

<%= f.field_container :vimeo_id do %>
    <%= f.label :vimeo_id, 'Vimeo ID' %><br />
    <%= f.text_field :vimeo_id %>
<% end %>


<script type="text/javascript">
  $(function () {
    $('#webinarDatetimePicker').datetimepicker({
      format: "YYYY-MM-DD HH:mm:ss z",
      useCurrent:false
    });
  });
</script>
